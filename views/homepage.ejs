<html>
    <head>
        <title>Homepage</title>
        <link rel="stylesheet" type="text/css" href="style/style1.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>

        <div class="container">
            <h1>Realtime Data</h1>


            <% 
            if (data == null)
            {
                %>
          
                <h2>No Data Found</h2>
          
                  <% 
              }
              else {
              
            %>




              <table class="rwd-table">
                <tbody>

                  <tr>
                    <th>Sr. No.</th>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Comment</th>
                    <th>Update Data</th>
                  </tr>


                  <% data.forEach(function(data, index) { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= data[0] %></td>
                        <td><%= data[1] %></td>
                        <td><%= data[2] %></td>
                        <td><%= data[3] %></td>
                        <td><%= data[4] %></td>
                        <td><a href="editdata?id=<%= data[0]%>&fname=<%= data[1] %>&lname=<%= data[2] %>&email=<%= data[3] %>&comment=<%= data[4] %>"><i class="fa fa-edit" style="font-size:38px;color:rgb(101, 168, 239)"></i></a></td>
                    </tr>
                <% }) %>


                </tbody>
              </table>

              <% 
              }
              
            %>

              <h3><a href="/adddata">Add Data</a></h3>
            </div>






    </body>
</html>